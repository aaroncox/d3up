<script type="text/javascript">
	$(function(){ 
		var charList = $("#import-characters"),
				battletag = $("#battle-tag"),
				region = $("#region"),
				search = $("#search-battle-tag").button(),
				importer = $("#import-from"),
				characters = $("#import-character"),
				research = $("#repeat-search").button(),
				classElement = $("#class-element select");
		characters.hide();
		research.click(function() {
			characters.hide();
			importer.show();
			return false;
		});
		search.click(function() {
			characters.show();
			importer.hide();
			$.ajax({
				method: 'GET',
				dataType: 'json',
				data: {
					battletag: battletag.val(),
					region: region.val(),
				},
				success: function(data) {
					if(data == null) {
						charList.empty().append("<option value=''>Error: No Characters found!</option>");
					} else {
						charList.empty().append("<option value=''>Select a Character...</option>");
						$.each(data, function(k,v) {
							var option = $("<option>");
							option.val(v.id);
							option.attr("data-class", v.class);
							option.html("[" + v.level + "] " + v.name + " - " + v.class.replace(/-/g, ' ').capitalize());
							charList.append(option);
						});
					}
				},
				error: function(jqXHR, textStatus, errorThrown) {
					charList.empty().append("<option value=''>Error: No Characters found!</option>");
				}
			});
			return false;
		});
		charList.bind('change', function() {
			var cls = $(this).find(":selected").attr("data-class"), 
					clsPick = $("#class-element select").find("option[value=" + cls + "]");
			$("#class-element select").find("option").each(function() {
				$(this).removeAttr("selected");
			})
			clsPick.attr("selected", "selected");
		});
	});
</script>
