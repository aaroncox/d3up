<style type="text/css" media="screen">
  .stats-table {
    width: 285px;
    margin: 10px auto 10px;
    border: 1px solid #333;
    background: #222;
  }
  .stats-table td.hl-ehp, 
  .stats-table td.hl-dps {
    text-shadow: 2px 2px 2px #111;
    font-size: 18px;
    color: #ececec;
    padding: 5px;
  }
  .stats-table td.hl-dps .value {
    color: #F50;
  } 
  .stats-table td.hl-ehp .value {
    color: #5F0;
  }   
  .stats-table td.hl-dps .value,
  .stats-table td.hl-ehp .value {
    font-weight: bold;
  }
</style>
<table class="stats-table">
  <tr>
    <td class="hl-dps">
      <div class="item-stat">
        <span data-value="dps" class="value">~</span>
        <span class="stat">Damage per Second</span>
      </div>
    </td>
    <td class="hl-ehp">
      <div class="item-stat">
        <span data-value="ehp" class="value">~</span>
        <span class="stat">Effective Hit Points</span>
      </div>
    </td>
  </tr>
</table>
<div style="text-align: center; margin-bottom: 10px">
  <select id="vsLevel">
  	<option value="60" selected="selected">Stats vs 60 Monster</option>
  	<option value="61">Stats vs 61 Monster</option>
  	<option value="62">Stats vs 62 Monster</option>
  	<option value="63">Stats vs 63 Monster</option>
  </select>
  <!-- <select id="powerLevel">
    <option value="">Power Level</option>
  </select> -->
</div>
<table class="statistics-table" id="compare-table">
