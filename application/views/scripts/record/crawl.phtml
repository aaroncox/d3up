<div id="build-create" class='content-page'>
	<div class='featured title-block'>
		<h5 style='color: #B18135'>Copy from Battle.net Character Profile</h5>
		<h2><a href="/build/create">D3Up.com Armory Copy</a></h2>
	<? if($this->status): ?>
			<div class='section-preview'>
				<p>You've copied the following gear into this build: <?= $this->mLink($this->record)?></p>
			</div>
		</div>
		<div class="page">
			<table class='d3up-table'>
				<tr>
					<th>Slot</th>
					<th>Item Name</th>
					<th>Results</th>
				</tr>
			<? foreach($this->status as $status): ?>
				<tr>
					<td><?= $status['slot'] ?></td>
					<td><?= $this->itemLink($status['item']) ?></td>
					<td>
						<? if($status['result'] == "new"): ?>
							Created New Item
						<? endif ?>
						<? if($status['result'] == 'existed'): ?>
							Already Existed, Equipped
						<? endif ?>
					</td>
				</tr>
			<? endforeach ?>
			</table>
			<p style="text-align: center">
				<a href="/b/<?= $this->record->id ?>" class='ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only' style="padding: 5px; width: 450px">Goto my Build</a>
			</p>
		</div>
	</div>
<? else: ?>
		<div class='section-preview'>
			<p>You've chosen to copy one of your Diablo 3 character's into this build on D3Up.com</p>
			<p><?= $this->mLink($this->record)?></p>
			<p>This process will change the build above's gear, skills and other information to be like what is currently shown on the armory. Please note, Paragon levels are currently not imported, you'll have to adjust that yourself on the <?= $this->mLink($this->record, array('text' => 'Build Edit', 'action' => 'edit'))?> page.</p>
		</div>
	</div>
	<div class='page'>
		<table id="all-builds" class="d3up-table">
			<thead>
				<th></th>
				<th>Name</th>
				<th>Class</th>
				<th>Level</th>
				<th>Mode</th>
				<th>Actions</th>
			</thead>
			<tbody>
				<? if($this->characters): ?>
					<? foreach($this->characters as $character): ?>
					<tr class='build-row'>
						<td class="icon"><img src="/images/<?= $character['class'] ?>.png"/></td>
						<td><?= $character['name'] ?></td>
						<td><?= ucwords(str_replace("-", " ", $character['class'])) ?></td>
						<td>Level <?= $character['level'] ?></td>
						<td>
							<? if($character['hardcore']): ?>
								Hardcore
							<? else: ?>
								Softcore
							<? endif ?>
						</td>
						<td>
							<a href="?character=<?= $character['id'] ?>" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only"><span class="ui-button-text">Copy into Build</span></a>
						</td>
					</tr>
					<? endforeach ?>
				<? else: ?>
					<tr><td colspan='10'><h3 style='color: #f00'>We cannot find any characters associated to your battletag. Please edit your profile and ensure your battletag is entered correctly.</h3></td></tr>
				<? endif ?>
			</tbody>
		</table>
	</div>
<? endif ?>
</div>
